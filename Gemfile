# If you have any plugins, put them here!
group :jekyll_plugins do
  gem 'bibtex-ruby', '~> 5'
  gem 'jekyll-feed'
  gem 'jekyll-fontawesome-svg'
  gem 'jekyll-paginate-v2', github: 'mmistakes/jekyll-paginate-v2', branch: 'jekyll-v4'
